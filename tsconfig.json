{
  "include": [
    "src",
    "types"
  ],
   "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "ESNext",   
    "target": "ES2020",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "./",  
    "esModuleInterop": true,      
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  }
}